<?xml version="1.0" encoding="UTF-8"?>
<!-- 底部圆角 白色背景 灰色边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <!-- 实心 -->
            <solid android:color="#ffb2b2b2" />

            <!-- 圆角 -->
            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="8dp"
                android:topLeftRadius="8dp"
                android:topRightRadius="0dp" />

            <padding
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"
                android:top="5dp" />

            <!-- 描边 -->  
            <stroke
                android:width="1dp"
                android:color="#ffcfcfcf" />
        </shape>
    </item>

</layer-list>